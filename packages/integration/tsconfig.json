{
    "compilerOptions": {
        "declaration": true,
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "src",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "types": ["node"]
    },
    "include": ["src/"]
}
