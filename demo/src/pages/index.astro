---
import Card from './_Card.astro';
// console.log({ $$result });

import { jsx as h } from 'astro/jsx-runtime';

const getCard = (type: 'quizz' | 'note') => {
    if (type === 'quizz') {
        return <h1 class="text-red-700">This is a quizz card</h1>;
    }
    return <h1> This is a note card</h1>;
};

const MyCard = (
    <Card>
        <h1> Hi!!</h1>
        <h1> Hi!!</h1>
        <h1> Hi!!</h1>
    </Card>
);

const QuizzCard = getCard('quizz');
const NoteCard = getCard('note');
console.log({ QuizzCard, NoteCard });
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro</title>
    </head>
    <body>
        <h1>Astro</h1>
        <QuizzCard />
        <NoteCard />
        <MyCard />
    </body>
</html>
